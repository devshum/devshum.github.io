     //mixins
     mixin figure(img, alt, figcaption)
      figure.figure
       a(href="#")
        img(src= img, alt= alt)
       figcaption= figcaption

     mixin article(day, month, year, icon, img, alt, title, paragraph)
      a(href="#")
       article.article.mb-30px
        ul.article__date 
         li.article__day= day
         li.article__month= month
         li.article__year= year
        .article__content
         .article__img 
          .article__logo-box
            svg.article__icon
             use(xlink:href= icon)
          img(src= img, alt= alt)
         ul.article__description
          li
           // base (typography)
           h2.mb-10px= title  
          li
           // base (typography)
           p= paragraph 

     mixin cta(title)
      ul
       li
        // base (typography)
        h3.mb-20px= title
       li
        // components (btn)
        a(href="#").btn Go now

