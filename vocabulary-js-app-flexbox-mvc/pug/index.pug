     // layouts(container)
     .container
      .container__content
       .container__profile
        // components(btn)
        .btn.mb-30px
         input(type="checkbox" name="theme").btn__checkbox#toggle
         label(for="toggle").btn__shape
          span.btn__circle &nbsp;
        // components(user-panel)
        figure.user-panel
         .user-panel__header-box
          img(src="img/user/header.jpg", alt="user header")
          .user-panel__picture-box
           img(src="img/user/picture.jpg", alt="user picture")
         ul.user-panel__text-box
          // base(typography)
          li
           h1.heading-primary.pt-30px
            span Vlad Shum
            span Learn English
            // components(cta)
          li
           a(href="#").cta Account
            svg
             use(xlink:href="#person")
        h3.heading-secondary %Date%
       main.container__vocabulary
        // components(vocabulary-panel)
        h2.heading-tertiary.mb-30px Total Words:
         span.heading-tertiary--number 12
         span.heading-tertiary--delete Delete All
          svg
            use(xlink:href="#trash")
        .vocabulary-panel 
         figure.vocabulary-panel__add
          input(type="text" placeholder="From eng").vocabulary-panel__add-from 
          input(type="text" placeholder="Into rus").vocabulary-panel__add-into
          .vocabulary-panel__btn
           svg
            use(xlink:href="#submit")
         //components(eye)
         .eye__hide.mt-10px
          svg
           use(xlink:href="#eye-close")
         .eye__show.mt-10px
          svg
           use(xlink:href="#eye-open")
         .vocabulary-panel__box 
          // components(item)
          //ul.item#word-1.mt-10px
           li 
            .item__from Friend
           li
            .item__into Друг
           li
            button.item__delete 
              i.icon.ion-close-circled
       // layouts(footer)
       footer.footer
        ul
         li Made by Vlad Shum
          a(href="#")
           svg
            use(xlink:href="#linkedin")
          a(href="#")
           svg
            use(xlink:href="#github")
         li @WORDS VOCABULARY APP(ES5)
          i.icon.ion-heart
